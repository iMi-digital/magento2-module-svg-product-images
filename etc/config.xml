<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <dev>
            <image>
                <default_adapter>IMAGEMAGICKSVG</default_adapter>
                <adapters>
                    <IMAGEMAGICKSVG>
                        <title>ImageMagick with SVG</title>
                        <class>IMI\SVGProductImages\SVGImageMagickAdapter</class>
                    </IMAGEMAGICKSVG>
                </adapters>
            </image>
        </dev>
        <general>
            <file>
                <protected_extensions>
                    <svg>svgIsAllowed</svg>
                </protected_extensions>
            </file>
        </general>
    </default>
</config>
